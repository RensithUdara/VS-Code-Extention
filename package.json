{
  "name": "developer-productivity-tools",
  "displayName": "Developer Productivity Tools",
  "description": "A collection of useful tools to boost developer productivity including line duplication, text sorting, timestamp insertion, UUID generation, and live text statistics",
  "version": "1.0.0",
  "publisher": "RensithUdara",
  "author": {
    "name": "Rensith Udara",
    "email": "rensithudara@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RensithUdara/VS-Code-Extention.git"
  },
  "bugs": {
    "url": "https://github.com/RensithUdara/VS-Code-Extention/issues"
  },
  "homepage": "https://github.com/RensithUdara/VS-Code-Extention#readme",
  "keywords": [
    "productivity",
    "tools",
    "utilities",
    "developer",
    "text manipulation",
    "line duplication",
    "sorting",
    "uuid",
    "timestamp"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "developer-productivity-tools.duplicateLine",
        "title": "Duplicate Current Line",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.insertTimestamp",
        "title": "Insert Current Timestamp",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.sortLinesAsc",
        "title": "Sort Selected Lines (Ascending)",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.sortLinesDesc",
        "title": "Sort Selected Lines (Descending)",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.removeEmptyLines",
        "title": "Remove Empty Lines",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.openInNewWindow",
        "title": "Open Current File in New Window",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.countWords",
        "title": "Count Words/Lines/Characters",
        "category": "Productivity"
      },
      {
        "command": "developer-productivity-tools.generateUuid",
        "title": "Generate UUID",
        "category": "Productivity"
      }
    ],
    "keybindings": [
      {
        "command": "developer-productivity-tools.duplicateLine",
        "key": "ctrl+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "developer-productivity-tools.insertTimestamp",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "developer-productivity-tools.duplicateLine",
          "group": "1_modification@1"
        },
        {
          "command": "developer-productivity-tools.sortLinesAsc",
          "group": "1_modification@2",
          "when": "editorHasSelection"
        },
        {
          "command": "developer-productivity-tools.sortLinesDesc",
          "group": "1_modification@3",
          "when": "editorHasSelection"
        },
        {
          "command": "developer-productivity-tools.removeEmptyLines",
          "group": "1_modification@4",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
